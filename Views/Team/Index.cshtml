@model IEnumerable<FinalTest.Models.Team>
@{
    ViewData["Title"]="Index";
}    
@{
    var position=1;
}
@if(Model.Count()>0)
{
    <table border="2" cellpadding="15">
        <thead>
            <th><h3>Position</h3></th>
            <th><h3>Team Name</h3></th>
            <th><h3>Team Stadium</h3></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@position</td>
                <td><a asp-action="Details" asp-route-teamName="@item.TeamName">@item.TeamName</a>
                <img src="~/Image/@item.TeamImage" >
                </td>
                <td><a asp-action="Details" asp-controller="Stadium" asp-route-stadiumName="@item.Stadium.StadiumName">@item.Stadium.StadiumName</a></td>
            </tr>
           position+=1;
            
        }
        </tbody>
    </table>
}
else
{
    <h2 class="text-danger">No team available</h2>
}
